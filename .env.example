# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-this

# Database
DATABASE_PATH=data/expenses.db

# Friday Panic Button Settings
DEFAULT_START_DATE=2024-01-01
BATCH_SIZE=100
CONFIDENCE_THRESHOLD=0.7
MAX_GAP_DAYS=7

# Rate Limiting (set to false for development)
RATE_LIMIT_ENABLED=false

# Plaid API Configuration (REQUIRED for production app)
PLAID_CLIENT_ID=your_plaid_client_id_here
PLAID_SECRET=your_plaid_secret_here
PLAID_ENV=sandbox
# Options: sandbox, development, production
# Get credentials at: https://dashboard.plaid.com/signup
PLAID_ACCOUNT_FILTER=credit
# Options: credit (only credit card accounts), all (all linked accounts)

# Google OAuth Configuration (for Gmail integration)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Per Diem Configuration
DAILY_FOOD_ALLOWANCE=75.00

# Chase Account Configuration (optional - for filtering)
CHASE_ACCOUNT_NAMES=Chase Checking,Chase Sapphire

# SAP Concur API Configuration (optional - for expense submission)
CONCUR_BASE_URL=https://us.api.concursolutions.com
CONCUR_CLIENT_ID=your_concur_client_id
CONCUR_CLIENT_SECRET=your_concur_client_secret
CONCUR_REFRESH_TOKEN=your_concur_refresh_token

# Logging
LOG_LEVEL=INFO